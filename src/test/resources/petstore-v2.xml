<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!--2  第一种方式 默认构造 -->
    <bean id="petStore" class="lite.summer.service.v2.PetStoreService">
        
        <property name="accountDao" ref="accountDao" />
        <property name="itemDao" ref="itemDao" />
        <property name="owner" value="rezero" />
        <property name="version" value="2" />
        <property name="choice" value="on" />
    </bean>

    <bean id="accountDao" class="lite.summer.dao.v2.AccountDao"></bean>

    <bean id="itemDao" class="lite.summer.dao.v2.ItemDao"></bean>
</beans>